class Solution:
    def merge(self, intervals: List[List[int]]) -> List[List[int]]:
        intervals.sort(key=lambda interval: interval[0])  # sort intervals by start value
        merged = []

        for interval in intervals:
            if not merged or merged[-1][1] < interval[0]:# no overlap, append interval
                # previous interval's last(1) value < curr interval's first(0) value
                merged.append(interval)
            else:
                merged[-1] = [merged[-1][0], max(merged[-1][1], interval[1])]
                # overlap exists, merge intervals
                # 1st values is same, last value is max of (previous last, curr)
        return merged


# Time Complexity: O(N log N)
# Space Complexity: O(N)
# by ar-sayeem [February 27, 2026]
